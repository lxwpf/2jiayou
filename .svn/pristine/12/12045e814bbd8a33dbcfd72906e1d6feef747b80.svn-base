@charset "utf-8";
.bindPhone{
	margin: 0.4444444444444444rem 1.0444444444444445rem 1.3333333333333333rem 1.0444444444444445rem;
}
.bindPhone .input1{
	height: 2rem;
	width: 100%;
	border: none;
	border-bottom: 0.022222222222222223rem solid #E5E5E5;
	font-size:0.4864864864864865rem;
}
.bindPhone .input2{
	height: 2rem;
	border: none;
	width: 60%;
	font-size:0.4864864864864865rem;
}
.bindPhone .validata{
	border-bottom: 0.022222222222222223rem solid #E5E5E5;
}
.bindPhone a{
	background: #E68124;
    color: white;
    height: 0.652rem;
    line-height: 0.652rem;
    width: 2.8231rem;
    font-size: 0.4864864864864865rem;
    float: right;
    margin-top: 0.655555555555556rem;
    border-radius: 0.2222222222222222rem;
    text-align: center;
}
.bindBtn{
	height: 1.0888888888888888rem;
	display: block;
	background: #E68124;
	border-radius: 0.2222222222222222rem;
	margin: 0 1rem;
	font-size: 0.4864864864864865rem;
	color: white;
	text-align: center;
	letter-spacing: 0.2222222222222222rem;
	line-height: 1.0888888888888888rem;
}
.bindSuccess{
	height: 100%;
	background: #f0eff5;
}
.alreadyBind{
	display: block;
	width: 100%;
	text-align: center;
	height: 3.3333333333333335rem;
	line-height: 3.3333333333333335rem;
	background: white;
	color: #888888;
	font-size: 0.4864864864864865rem;
}
#msg{
	text-align: center;
	color: red;
	padding: 0.2222222222222222rem;
}
