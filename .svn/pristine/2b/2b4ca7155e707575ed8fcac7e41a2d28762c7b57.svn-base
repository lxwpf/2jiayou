*{
	margin: 0;
	padding: 0;
}
html,body{
	height: 100%;
	background: #F3F3F3;
}
.pay-container{
	font-size: 0.4864864864864865rem;
	color: #666666;
	background: white;
}
.margin-comm-left{
	margin-left: 0.5405405405405406rem;
}
.margin-comm-right{
	margin-right: 0.5405405405405406rem;
}
.margin-comm-top{
	margin-top: 0.5405405405405406rem;
}
.margin-comm-bottom{
	margin-bottom: 0.5405405405405406rem;
}
.pay-container .up{
	height: 4.945945945945946rem;
	padding-top: 0.5405405405405406rem;
}
.pay-container .title{
	font-size: 0.5405405405405406rem;
	color: #666666;
}
.pay-container .pay-content{
	height: 2.7027027027027026rem;
	margin-top: 0.2702702702702703rem;
	margin-bottom: 0.2702702702702703rem;
}
.pay-container .pay-content img{
	height: 100%;
	width: 2.7027027027027026rem;
	float: left;
	margin-right: 0.2702702702702703rem;
}
.pay-container .pay-content p{
	font-size: 0.4864864864864865rem;
