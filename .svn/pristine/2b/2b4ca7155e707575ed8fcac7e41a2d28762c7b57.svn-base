}
.gou{
	width: 0.7027027027027027rem;
	height: 0.5135135135135135rem;
}
.money .span-two{
	float: right;
	margin-right: 0.5405405405405406rem;
	margin-top: 0.3405405405405406rem;
}
.dn{
	display: none;
}
.sure-btn{
	height: 1.3243243243243243rem;
	width: 100%;
	background: #FF8C00;
	text-align: center;
	font-size: 0.4864864864864865rem;
	color: white;
	line-height: 1.3243243243243243rem;
	position: absolute;
	bottom: 0;
}

.pay-qrcode{
	position: absolute;
    top: 50%;
    margin-top: -4rem;
    left: 50%;
    margin-left: -3.6rem;
    height: 7.513514rem;
    width: 7.513514rem;
    display: none;
    background: url(/resources/img/pay/pay_qrcode.png) no-repeat center;
    cursor: pointer;
    background-size: 100% 100%;
}
.pay_img{
	position: relative;
    top: 50%;
    margin-top: -3rem;
    left: 50%;
    margin-left: -2.5rem;
    height: 5.108108rem;
    width: 5.108108rem;
}