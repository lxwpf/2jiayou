@charset "utf-8";

html, body {
	height: 100%;
	background: #f0eff5;
	color: #FFFFFF;
}

.orange-color {
	color: #FF8C00;
}

.bg {
	background: url(../img/examination/BG_ques.png) no-repeat;
	background-size: 100% 100%;
	height: 100%;
	width: 100%;
}

.qus-area {
	position: absolute;
	height: 50%;
	width: 100%;
}

.now-qus {
	position: absolute;
	width: 100%;
	font-size: 54px;
	text-align: center;
	top: 15%;
}

.left-qus {
	position: absolute;
	width: 100%;
	font-size: 32px;
	text-align: center;
	padding-top: 5.8%;
	top: 23%;
}

.process {
	position: absolute;
	top: 42%;
    left: 8%;
    width: 84%;
}
.process-bg {
	position: absolute;
	width: 100%;
}

.process-val {
	position: absolute;
	width: 100%;
}

.title {
	position: absolute;
	width: 100%;
	font-size: 78px;
	text-align: center;
	top: 52%;
}

.ques {
	position: absolute;
	font-size: 42px;
	width: 83.2%;
	padding-left: 8.7%;
	padding-top: 5%;
	top: 65%;
}

.item-area {
	position: absolute;
	top: 50%;
	height: 40%;
	width: 100%;
}

.item-txt-area {
	height: 100%;
	width: 80%;
	left: 10%;
	position: relative;
}

.item-txt {
	position: relative;
	height: 21.6%;
	width: 100%;
	margin-bottom: 2%;
}
.txt-bg {
	position: absolute;
	width: 100%;
}
.txt-res {
	position: absolute;
	width: 100%;
    top: 0%;
    left: 0%;
}

.txt-no {
	position: relative;
    z-index: 9;
    left: 1.5%;
    top: 2.6%;
    height: 76.2%;
    width: 14%;
}

.txt-val {
	position: absolute;
    text-align: center;
    top: 32.5%;
	left: 11.5%;
    width: 80%;
	color: #3A67BA;
	font-size: 38px;
	z-index: 999;
}

.item-pic-area {
	height: 100%;
	width: 80%;
	left: 10%;
	position: relative;
	padding-left: 3%;
}

.item-pic {
	position: relative;
    height: 300px;
    width: 300px;
    margin: 20px 50px 50px 20px;
	display: inline-block;
}
.pic-bg {
    position: absolute;
    height: 100%;
    width: 100%;
    margin: 1%;
}
.pic-val {
	position: absolute;
    width: 80%;
    top: 10%;
    left: 10%;
}
.pic-meno {
    position: absolute;
    width: 80%;
    height: 14%;
    bottom: 4%;
    left: 10%;
    font-size: 35px;
    text-align: center;
    z-index: 9;
    color: #3A67BA;
    background-color: #999999;
    opacity: 1.0;
}
.pic-meno span{    
	/* display:inline-block; */
}
.pic-no {
	position: absolute;
    left: 0%;
    top: 0%;
    width: 42%;
	z-index: 9;
}

.pic-res {
	position: absolute;
	left: 24.2%;
	top: 24.2%;
	height: 50.2%;
	width: 50.2%;
	z-index: 99;
}
