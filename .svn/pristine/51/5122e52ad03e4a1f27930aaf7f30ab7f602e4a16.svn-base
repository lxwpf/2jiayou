@charset "utf-8";
html,body{
	background: #f0eff5;
}
/*头部，用户信息*/
.userInfoShow{
	height: 4.666666666666667rem;
	width: 100%;
	background: url(../img/person/1.png) no-repeat;
	background-size: 100% 100%;
	position: relative;
}
.userInfoShow .userInfoWrapper{
	height: 4.666666666666667rem;
	width: 2.533333333333333rem;
	position: absolute;
	left: 50%;
	margin-left: -1.1333333333333333rem;
}
.userInfoShow .round{
    width: 2.533333333333333rem;
    height: 2.533333333333333rem;
    background: white;
    -moz-border-radius: 1.3333333333333333rem;
    -webkit-border-radius: 1.3333333333333333rem;
    border-radius: 1.3333333333333333rem;
    margin-top: 0.6133333333333333rem;
}
.userInfoShow .userIcon{
	height: 2.2666666666666666rem;
	width: 2.2666666666666666rem;
	-moz-border-radius: 1.3333333333333333rem;
    -webkit-border-radius: 1.3333333333333333rem;
    border-radius: 1.3333333333333333rem;
	margin: 0.13333333333333333rem 0.13333333333333333rem;
}
.userInfoShow .userAccount{
	text-align: center;
	margin-top: 0.26666666666666666rem;
	font-size: 0.4864864864864865rem;
	color: #333333;
}
.userInfoShow .intoIcon{
	position: absolute;
	height: 0.6648648648648649rem;
	width: 0.6648648648648649rem;
	right: 0.4rem;
	top: 50%;
	margin-top: -0.26666666666666666rem;
}
/*头部，用户信息*/

/*我的收藏*/
.myStow{
	padding-top: 0.13513513513513514rem;
	background: white;
	border-bottom: 0.02702702702702703rem solid #F3F3F3;
}
.myStow .stowContent{
	margin-left: 0.32rem;
	height: 100%;
}
.myStow .stowContent .stowText::before{
	content: "";
	display: inline-block;
	background: url(../img/person/3.png) no-repeat;
	background-size: 100% 100%;
	height: 0.6648648648648649rem;
    width: 0.6648648648648649rem;
    vertical-align: -0.1018018108108108rem;
    margin-right: 0.26666666666666666rem;

}
.myStow .stowContent .stowText{
	font-size: 0.4864864864864865rem;
	color: #666666;
}
.myStow .stowContent .intoStow{
	float: right;
    margin-right: 0.4rem;
    margin-top: 0.16513513513513514rem;
    height: 0.4486486486486487rem;
    width: 0.4486486486486487rem;
}
.myStow .stowArticle{
	height: 2.88rem;
	margin: 0.2702702702702703rem 0;
	overflow: hidden;
	position: relative;
}
.myStow .stowArticle .scroller{
	height: 100%;
	width:auto;
}
.myStow .stowArticle .scroller ul li{
	display: block;
	float: left;
	height: 2.8066666666666667rem;
	width: 2.933333333333333rem;
	margin-right: 0.26666666666666666rem;
	position: relative;
}
.myStow .stowArticle .scroller ul li .liImg{
	height: 1.972972972972973rem;
    width: 3.3866666666666667rem;
}
.scroller ul li .video{
	position: absolute;
	height: 1.2rem;
	width: 1.2rem;
	background: url(../img/common/4.png) no-repeat;
	background-size: 100% 100%;
	top: 50%;
	left: 50%;
	margin: -1rem 0 0 -0.2rem;
}
.scroller ul li .radio{
	position: absolute;
	height: 1.2rem;
	width: 1.2rem;
	background: url(../img/common/5.png) no-repeat;
	background-size: 100% 100%;
	top: 50%;
	left: 50%;
	margin: -0.8666666666666668rem 0 0 -0.6rem;
}
.myStow .stowArticle .scroller ul li p{
	width: 2.933333333333333rem;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 0.4rem;
	color: #888888;
}
/*我的收藏*/

/*浏览历史*/
.myStow .stowContent .histroyText::before{
	content: "";
	display: inline-block;
	background: url(../img/person/4.png) no-repeat;
	background-size: 100% 100%;
	height: 0.6648648648648649rem;
    width: 0.6648648648648649rem;
    vertical-align: -0.18288289189189186rem;
    margin-right: 0.26666666666666666rem;
}
.myStow .stowContent .histroyText{
	font-size: 0.4864864864864865rem;
	color: #666;
}
