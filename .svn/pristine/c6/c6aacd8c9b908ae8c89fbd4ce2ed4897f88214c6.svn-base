/*评论*/
.commentsBox{
	width:100%;
	background-color:#fff;
}
.commentsBox ul{
	width:100%;
}
.commentsBox ul li{
	padding:0 0.21621621621621623rem;
	height:3.189189189189189rem;
	border-bottom:0.02702702702702703rem solid #F3F3F3;
}
.commentsBox ul li .head{
	float:left;
	width:1.2972972972972973rem;
	height:1.2972972972972973rem;
}
.commentsBox ul li .head img{
	margin:0.25225225225225223rem auto;
	display:block;
	width:1.2162162162162162rem;
	height:1.2162162162162162rem;
	border-radius:0.3963963963963964rem;
}
.commentsBox ul li .comment{
	float:right;
	width: 7.135135rem;
	height:100%;
	margin: 1.5% 6.7% 1.5% 2.7%;
}
.commentsBox ul li .comment .name{
	font-size:0.4864864864864865rem;
	color:#666666;
}
.commentsBox ul li .comment .name strong{
	display:inline-block;
	width: 3.8054054054054054rem;
}
.commentsBox ul li .comment .name span{
	float: right;
	font-size: 0.3783783783783784rem;
}
.commentsBox ul li .comment p{
	font-size:0.3783783783783784rem;
	color:#888888;
	line-height: 0.6756756756756757rem;
}
/*发送评论*/
.addComments{
	position:fixed;
	bottom:0;
	left:0;
	width:10rem;
	height:1.52rem;
	background-color:#fff;
	border-top:0.013333333333333334rem solid #e6e6e6;
	z-index:9999;
}
.addComments .box{
	position:relative;
	width:10rem;
	height:1.52rem;	
}
.addComments .box input{
	margin:0.52rem 0 0 0.6666666666666666rem;
	border:none;
	font-size:0.48rem;
	line-height:0.48rem;
}
.addComments .box .send{
	position:absolute;
	top:0.26666666666666666rem;
	right:0.4rem;
	height:0.9866666666666667rem;
	width:2.08rem;
	border-radius:0.06666666666666667rem;
	font-size:0.48rem;
	line-height:0.9866666666666667rem;
	color:#fff;
	text-align:center;
	background-color:#ffb62a;
}



