@charset "utf-8";
html,body{
	background-color:#f0eff5;
}
.todayWeather{
	margin:0 auto;
	margin-top:0.4rem;
	width:9.466666666666667rem;
}
.todayWeather .todayLeft{
	float:left;
	width:5.306666666666667rem;
	height:3.973333333333333rem;
	border:0.013333333333333334rem solid #e6e6e6;
	background-color:#fff;
}
.todayWeather .todayLeft .year{
	font-size:0.40540540540540543rem;
	color:#888;
	line-height:0.9333333333333332rem;
	text-align:center;
	font-weight:500;
}
.todayWeather .todayLeft .year strong{
	font-weight:500;
}
.todayWeather .todayLeft .week{
	margin:0 0.13333333333333333rem 0 0.13333333333333333rem;
}
.todayWeather .todayLeft .day{
	font-size:1.7297297297297298rem;
	color:#ff8c00;
	text-align:center;
	line-height:1.7297297297297298rem;
}
.todayWeather .todayLeft .good{
	text-indent:0.8rem;
	font-size:0.40540540540540543rem;
	color:#ff8c00;
	line-height:0.6133333333333333rem;
}
.todayWeather .todayLeft .good span{
	color:#ff8c00;
}
.todayWeather .todayLeft .bad{
	text-indent:0.8rem;
	font-size:0.40540540540540543rem;
	color:#ff8c00;
	line-height:0.6133333333333333rem;
}
.todayWeather .todayLeft .bad span{
	color:#ff8c00;
}
.todayWeather .todayRight{
	float:right;
	width:3.973333333333333rem;
	height:3.973333333333333rem;
	border:0.013333333333333334rem solid #e6e6e6;
	background-color:#fff;	
}
.todayWeather .todayRight .place{
	position:relative;
	font-size:0.4rem;
	color:#888;
	line-height:0.9333333333333332rem;
	text-indent:0.8rem;
}
.todayWeather .todayRight .place span{
	position:absolute;
	top:0.09333333333333334rem;
	left:0.26666666666666666rem;
	background:url(../img/housekeeper/1.png) no-repeat center center;
	background-size:100% 100%;
	width:0.5333333333333333rem;
	height:0.7466666666666667rem;
}
.todayWeather .todayRight .degree{
	position:relative;
	font-size:1.7066666666666668rem;
	color:#ff8c00;
	text-align:center;
	line-height:1.7066666666666668rem;
}
.todayWeather .todayRight .degree span{
	position:absolute;
	top:0.10666666666666667rem;
	right:0.5866666666666667rem;
	font-size:0.56rem;
	line-height:0.56rem;
}
.todayWeather .todayRight .cloud{
	text-align:center;
	font-size:0.4rem;
	color:#888;
	line-height:0.6133333333333333rem;	
}
.todayWeather .todayRight .cloud .cloudImg{
	margin:0.02666666666666667rem 0 0 0.6666666666666666rem;
	float:left;
	width:0.6933333333333334rem;
	height:0.56rem;
}
.todayWeather .todayRight .cloud .state{
	float:left;
	margin-left:0.13333333333333333rem;
}
.todayWeather .todayRight .wind{
	text-align:center;
	font-size:0.4rem;
	color:#333;
	line-height:0.6133333333333333rem;
}


.recommend{
	margin-top:0.26666666666666666rem;
	width:100%;
}
.recommend .recommendTitle{
	margin-left:0.4rem;
	position:relative;
	/*width:100%;*/
	height:0.5333333333333333rem;
	line-height:0.5333333333333333rem;
	font-size:0.4rem;
	color:#333;
}
.recommend .recommendTitle .sp1{
	position:absolute;
	top:0.06666666666666667rem;
	left:0px;
	width:0.16rem;
	height:0.4rem;
	background-color:#ff8c00;
	margin-right: 1rem;
}
.recommend .recommendList{
	margin-top:0.26666666666666666rem;
	width:100%;
	padding-bottom:1.6rem; 
}
.recommend .recommendList li{
	margin-bottom:0.13333333333333333rem;
	height:2.8189189189189188rem;
	padding:0 0.26666666666666666rem;
	background-color:#fff;
}
.recommend .recommendList li .passageImg{
	margin:0.4rem 0 0 0.26666666666666666rem;
	position:relative;
	float:left;
	width:3.3866666666666667rem;
	height:2.506666666666667rem;
}
.recommend .recommendList li .passageImg .pic{
	display:block;
	width:3.5135135135135136rem;
	height:1.972972972972973rem;	
}
.recommend .recommendList li .passageImg .video{
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-0.7866666666666667rem;
	margin-left:-0.5866666666666667rem;
	width:1.1733333333333333rem;
	height:1.1733333333333333rem;
}
.recommend .recommendList li .passageImg .music{
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-0.7866666666666667rem;
	margin-left:-0.5866666666666667rem;
	width:1.1733333333333333rem;
	height:1.1733333333333333rem;
}
.recommend .recommendList li .passageTxt{
	position:relative;
	margin:0.4rem 0.26666666666666666rem 0 0;
	float:right;
	width:4.986666666666666rem;
	height:2.081081081081081rem;	
}
.recommend .recommendList li .passageTxt .headings{
	font-size:0.4864864864864865rem;
	color:#666666;
	line-height:0.4799999999999999rem;
	display: block;
	overflow: hidden;/*超出部分隐藏*/
    white-space: nowrap;/*不换行*/
    text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.recommend .recommendList li .passageTxt .infor{
	position:absolute;
	bottom:0;
	left:0;
	width:4.986666666666666rem;
	height:0.5333333333333333rem;		
}
.recommend .recommendList li .passageTxt .infor .read{
	float:left;
	font-size:0.40540540540540543rem;
	color:#666666;
	line-height:0.5333333333333333rem;
}
.recommend .recommendList li .passageTxt .infor .type{
	float:right;
	font-size:0.40540540540540543rem;
	color:#FF8C00;
	line-height:0.5333333333333333rem;
}

.changeInfor{
	float: right;
	margin-right: 0.7405405405405406rem;
	font-size: 0.40540540540540543rem;
}
.today-tj{
	margin-left: 0.2702702702702703rem;
	font-size: 0.40540540540540543rem;
}